include __includes/sharedHTMLfunctions

extends layout

block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
          small &nbsp;#{pageHeader.strapline}
    .row
      .col-xs-12.col-sm-8
        .row.list-group
          each restaurant in restaurants
            .col-xs-12.list-group-item
              h4
                a(href="/restaurant")= restaurant.name
                small &nbsp;
                  +outputRating(restaurant.rating)
                span.badge.pull-right.badge-default= restaurant.distance
              p.address= restaurant.address
              p 
                each facility in restaurant.facilities
                  span.label.label-warning= facility
                  &nbsp;
      .col-xs-12.col-sm-4
        p.lead= sidebar
